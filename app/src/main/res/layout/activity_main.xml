<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context="com.sungkyu.catchlion.MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:src="@drawable/title"
            android:largeHeap="true"
            android:layout_weight="1"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">

        <Button
            android:id="@+id/btn_start_multi"
            android:layout_width="150dp"
            android:layout_height="62dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/p2button" />

        <Button
            android:id="@+id/btn_start_single"
            android:layout_width="150dp"
            android:layout_height="62dp"
            android:layout_above="@+id/btn_start_multi"
            android:layout_alignStart="@+id/btn_start_multi"
            android:layout_marginTop="20dp"
            android:background="@drawable/p1button"
            android:visibility="invisible" />

        <Button
            android:id="@+id/button3"
            android:layout_width="150dp"
            android:layout_height="62dp"
            android:layout_alignStart="@+id/btn_start_multi"
            android:layout_below="@+id/btn_start_multi"
            android:layout_marginTop="20dp"
            android:background="@drawable/p2button"
            android:visibility="invisible" />
    </RelativeLayout>

</LinearLayout>